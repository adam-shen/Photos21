<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PhotoViewController">
    <!-- Top: Back button and photo caption -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
            <Button text="Back" onAction="#handleBack"/>
            <Label fx:id="photoCaptionLabel" text="Photo Caption" style="-fx-font-size: 18px;"/>
        </HBox>
    </top>
    
    <!-- Center: Image display -->
    <center>
        <ImageView fx:id="photoImageView" preserveRatio="true" fitWidth="600" fitHeight="400" />
    </center>
    
    <!-- Bottom: Navigation and photo details -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <HBox spacing="20" alignment="CENTER">
                <Button text="Previous" onAction="#handlePreviousPhoto"/>
                <Button text="Next" onAction="#handleNextPhoto"/>
            </HBox>
            <Label fx:id="photoDateLabel" text="Date Taken:"/>
            <Label fx:id="photoTagsLabel" text="Tags:"/>
        </VBox>
    </bottom>
</BorderPane>
