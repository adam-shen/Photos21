<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.TilePane?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AlbumController">

    <!-- Top section: Header with Back button and album name -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
            <Button text="Back" onAction="#handleBack"/>
            <Label fx:id="albumNameLabel" text="Album Name" style="-fx-font-size: 20px;"/>
        </HBox>
    </top>

    <!-- Center section: ScrollPane wrapping a TilePane for the photo grid -->
    <center>
        <ScrollPane fx:id="scrollPane" hbarPolicy="AS_NEEDED" vbarPolicy="AS_NEEDED">
            <TilePane fx:id="photoTilePane"
                      orientation="HORIZONTAL"
                      hgap="10"
                      vgap="10"
                      tileAlignment="TOP_LEFT"
                      style="-fx-padding: 10px;">
            </TilePane>
        </ScrollPane>
    </center>

    <!-- Bottom section: Buttons for photo operations -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Button text="Add Photo" onAction="#handleAddPhoto"/>
            <Button text="Delete Photo" onAction="#handleDeletePhoto"/>
            <Button text="Copy Photo" onAction="#handleCopyPhoto"/>
            <Button text="Move Photo" onAction="#handleMovePhoto"/>
            <Button text="Open Photo" onAction="#handleOpenPhoto"/>
        </HBox>
    </bottom>
</BorderPane>
