<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UserController">
    <!-- Top section: Menu and header label -->
    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem fx:id="logoutMenuItem" text="Logout" onAction="#handleLogout"/>
                    <MenuItem fx:id="quitMenuItem" text="Quit" onAction="#handleQuit"/>
                </Menu>
            </MenuBar>
            <Label text="Photo Album Application" style="-fx-font-size: 24px; -fx-padding: 10px;"/>
        </VBox>
    </top>
    
    <!-- Center section: Table of Albums -->
    <center>
        <TableView fx:id="albumTableView">
            <columns>
                <TableColumn fx:id="albumNameColumn" text="Album Name" prefWidth="150"/>
                <TableColumn fx:id="photoCountColumn" text="# Photos" prefWidth="75"/>
                <TableColumn fx:id="dateRangeColumn" text="Date Range" prefWidth="250"/>
            </columns>
        </TableView>
    </center>
    
    <!-- Bottom section: Buttons for album actions -->
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <Button fx:id="addAlbumButton" text="Add Album" onAction="#handleAddAlbum"/>
            <Button fx:id="deleteAlbumButton" text="Delete Album" onAction="#handleDeleteAlbum"/>
            <Button fx:id="renameAlbumButton" text="Rename Album" onAction="#handleRenameAlbum"/>
            <Button text="Search Photos" onAction="#openSearchView"/>

            <!-- New Open Album button -->
            <Button fx:id="openAlbumButton" text="Open Album" onAction="#handleOpenAlbum"/>
        </HBox>
    </bottom>
</BorderPane>
