<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.SearchController">
    <!-- Optional album selection at the top -->
    <top>
        <HBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Select Album (optional):" />
            <ComboBox fx:id="albumComboBox" prefWidth="150" />
        </HBox>
    </top>
    
    <!-- Center: Tabbed pane with Date Range and Tag searches -->
    <center>
        <TabPane>
            <!-- Date Range Search Tab -->
            <Tab text="Date Range Search" closable="false">
                <AnchorPane>
                    <children>
                        <Label text="Start Date:" layoutX="10" layoutY="10"/>
                        <DatePicker fx:id="startDatePicker" layoutX="80" layoutY="5"/>
                        
                        <Label text="End Date:" layoutX="10" layoutY="50"/>
                        <DatePicker fx:id="endDatePicker" layoutX="80" layoutY="45"/>
                        
                        <Button text="Search" onAction="#performDateRangeSearch" layoutX="10" layoutY="100"/>
                    </children>
                </AnchorPane>
            </Tab>
            
            <!-- Tag Search Tab -->
            <Tab text="Tag Search" closable="false">
                <AnchorPane>
                    <children>
                        <Label text="Tag Query:" layoutX="10" layoutY="10"/>
                        <!-- Examples: "person=alice", "person=alice AND location=paris", or "person=alice OR person=bob" -->
                        <TextField fx:id="tagQueryField" layoutX="80" layoutY="5" prefWidth="200"/>
                        
                        <Button text="Search" onAction="#performTagSearch" layoutX="10" layoutY="50"/>
                    </children>
                </AnchorPane>
            </Tab>
        </TabPane>
    </center>
    
    <!-- Bottom: Display Search Results and Create Album Button -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" BorderPane.alignment="CENTER">
            <Label text="Search Results:"/>
            <ListView fx:id="searchResultsListView" prefWidth="400" prefHeight="200"/>
            <Button text="Create Album from Search Results" onAction="#handleCreateAlbumFromSearchResults"/>
        </VBox>
    </bottom>
</BorderPane>
