<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.PhotoController">
    <!-- Top: Back button and photo caption -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
            <Button text="Back" onAction="#handleBack" />
            <!-- Editable caption field -->
            <TextField fx:id="photoCaptionField"
                       promptText="Photo Caption"
                       style="-fx-font-size: 16px;"
                       editable="true" />
            <!-- Button to save caption to Photo object -->
            <Button text="Save Caption" onAction="#handleSaveCaption" />
        </HBox>
    </top>

    <!-- Center: Image display -->
    <center>
        <ImageView fx:id="photoImageView"
                   preserveRatio="true"
                   fitWidth="600"
                   fitHeight="400" />
    </center>

    <!-- Bottom: Tag controls and date label -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <!-- Date display -->
            <Label fx:id="photoDateLabel" text="Date Taken:" style="-fx-font-size: 14px;" />

            <!-- Tag list -->
            <Label text="Current Tags:" style="-fx-font-size: 14px;" />
            <ListView fx:id="tagListView" prefHeight="100" prefWidth="300" />

            <!-- Tag type and value input -->
            <HBox spacing="10" alignment="CENTER">
                <ComboBox fx:id="tagTypeComboBox" promptText="Tag Type" prefWidth="150" />
                <TextField fx:id="tagValueField" promptText="Tag Value" prefWidth="150" />
                <Button text="Add Tag" onAction="#handleAddTag" />
                <Button text="Delete Tag" onAction="#handleDeleteTag" />
            </HBox>

            <!-- Button to define a new tag type -->
            <Button text="Define New Tag Type" onAction="#handleDefineNewTagType" />

            <!-- Optional album selection for copy/move if you wish -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Select Album:"/>
                <ComboBox fx:id="albumComboBox" promptText="Destination" prefWidth="150"/>
            </HBox>

            <!-- Navigation for next/previous photo -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Previous" onAction="#handlePreviousPhoto" />
                <Button text="Next" onAction="#handleNextPhoto" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
