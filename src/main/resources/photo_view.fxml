<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="controller.PhotoController">
    <!-- Top: Back button and photo caption -->
    <top>
        <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 10px;">
            <Button text="Back" onAction="#handleBack"/>
            <!-- Using a TextField to display the caption -->
            <TextField fx:id="photoCaptionField" text="Photo Caption" style="-fx-font-size: 18px;" editable="false"/>
        </HBox>
    </top>
    
    <!-- Center: Image display -->
    <center>
        <ImageView fx:id="photoImageView" preserveRatio="true" fitWidth="600" fitHeight="400"/>
    </center>
    
    <!-- Bottom: Navigation and photo details -->
    <bottom>
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 10px;">
            <HBox spacing="20" alignment="CENTER">
                <Button text="Previous" onAction="#handlePreviousPhoto"/>
                <Button text="Next" onAction="#handleNextPhoto"/>
            </HBox>
            <!-- Display date -->
            <Label fx:id="photoDateLabel" text="Date Taken:"/>
            <!-- New: ListView for tags -->
            <Label text="Tags:"/>
            <ListView fx:id="tagListView" prefHeight="100" prefWidth="300"/>
            <!-- Optional: ComboBox for selecting a target album (if you use it) -->
            <HBox spacing="10" alignment="CENTER">
                <Label text="Select Album:"/>
                <ComboBox fx:id="albumComboBox" prefWidth="200"/>
            </HBox>
        </VBox>
    </bottom>
</BorderPane>
